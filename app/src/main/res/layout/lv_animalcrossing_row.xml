<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
    <ImageView
        android:id="@+id/ivVillagerImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:maxHeight="70dp"
        android:scaleType="fitCenter"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        android:contentDescription="@string/todo"
        />

        <TextView
            android:id="@+id/tvAnimalCrossing"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEspecie"
            android:layout_alignBottom="@+id/ivVillagerImage"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="69dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="112dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/ivVillagerImage"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEspecie"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivVillagerImage"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="109dp"
            android:layout_toEndOf="@+id/ivVillagerImage"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="12sp" />

    </RelativeLayout>
</layout>